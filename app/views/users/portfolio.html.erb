<h1 align="center">Search for Stocks here</h1>

<div align="center">
    <%= form_tag search_stocks_path, remote: true, method: :get do %>
        <%= label_tag :stock, "Search Stocks:" %>
        <%= text_field_tag :stock, params[:stock], placeholder: "Ticker Symbol" %>
        
        <%= submit_tag "Search" %>
    <% end %>
</div>

<% if logged_in? %>
    <div align="center" id="stock-result">
       
    </div>
<% else %>
    <div align="center">
        <h1>Please log in to search and follow stocks</h1>
        <h1><%= link_to "Log In", login_path %></h1>
    
<% end %>

<%= link_to "Home", root_path %>