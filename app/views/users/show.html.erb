<div align="center">
    <h1><%= @user.name %>'s Profile</h1>
    
    <h3><%= @user.username %></h3>
    <h3><%= @user.name %></h3>
    <h3><%= @user.email %></h3>
    
    <ul>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Edit Profile", edit_user_path(@user) %></li>
        <li><%= link_to "Delete Profile", user_path(@user), 
                                          method: :delete, data: { confirm: "Are you sure?" } %></li>
    </ul>
</div>
