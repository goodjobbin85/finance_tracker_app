<div align="center">
    <h1><%= @user.name %>'s Profile</h1>
    
    <h3><%= @user.username %></h3>
    <h3><%= @user.name %></h3>
    <h3><%= @user.email %></h3>
    
    <h5>My Stocks</h5>
    
    <table align="center" class="table table-striped">
        <tr>
            <th>Company Name</th>
            <th>Ticker Symbol</th>
            <th>Latest Price</th>
            <th>Remove Stock</th>
        </tr>
        
        <% @user.stocks.each do |stock| %>
            <tr>
                <td><%= stock.name %></td>
                <td><%= stock.ticker %></td>
                <td><%= stock.last_price %></td>
                <td><%= link_to "Remove Stock", user_stock_path(stock), 
                        method: :delete, data: { confirm: "Are you sure?" } %></td>
            </tr>
        <% end %>
        <%= link_to "Find More Stocks", search_stocks_path %>
    </table>
    
    
    <%= render 'users/friends' %>
    
    
    <ul>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Edit Profile", edit_user_path(@user) %></li>
        <li><%= link_to "Delete Profile", user_path(@user), 
                                          method: :delete, data: { confirm: "Are you sure?" } %></li>
    </ul>
</div>
